{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Redis",
      "type": "shell",
      "command": "docker compose up -d redis && echo 'Redis started'",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Stop Redis",
      "type": "shell",
      "command": "docker compose down redis",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
